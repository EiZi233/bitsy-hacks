{
	"name": "@bitsy/hecks",
	"description": "a collection of re-usable scripts for bitsy game maker",
	"keywords": [
		"bitsy",
		"hacks"
	],
	"main": "index.mjs",
	"version": "16.0.0",
	"scripts": {
		"build": "rollup -c",
		"test": "jest --runInBand",
		"lint": "eslint ./src/**/*.js",
		"postversion": "npm run build"
	},
	"author": "Sean S. LeBlanc <sean.s.leblanc@gmail.com>",
	"license": "MIT (individual hacks have their own license specified)",
	"repository": {
		"type": "git",
		"url": "git://github.com/seleb/bitsy-hacks.git"
	},
	"dependencies": {
		"@seansleblanc/pink-trombone": "^1.0.1",
		"array-flat-polyfill": "^1.0.1",
		"babylonjs": "^4.2.0",
		"input-gamepads.js": "^3.0.4",
		"kitsy": "^1.0.1",
		"omggif": "^1.0.10",
		"rollup": "^2.51.2",
		"rollup-plugin-commonjs": "^10.1.0",
		"rollup-plugin-node-resolve": "^5.2.0",
		"tracery-grammar": "^2.7.4",
		"webglazy": "^3.0.5"
	},
	"devDependencies": {
		"@babel/plugin-transform-runtime": "^7.14.5",
		"@babel/preset-env": "^7.14.5",
		"@babel/runtime": "^7.14.5",
		"doctrine": "^3.0.0",
		"eslint": "^7.28.0",
		"eslint-config-airbnb-base": "^14.2.1",
		"eslint-plugin-import": "^2.23.4",
		"jest": "^27.0.4",
		"jest-image-snapshot": "^4.5.0",
		"puppeteer": "^10.0.0"
	},
	"jest": {
		"testEnvironment": "node",
		"setupFilesAfterEnv": [
			"<rootDir>/src/test/setupTests.js"
		]
	},
	"release": {
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			"@semantic-release/changelog",
			"@semantic-release/npm",
			"@semantic-release/github",
			[
				"@semantic-release/git",
				{
					"assets": [
						"dist/*.js",
						"README.md",
						"CHANGELOG.md",
						"package.json",
						"package-lock.json"
					]
				}
			]
		]
	}
}
